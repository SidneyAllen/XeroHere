<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@null"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        style="@style/DestinationMargin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <View
            style="@style/DestinationMargin"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <include layout="@layout/sdk_action_bar"/>

            <ScrollView
                android:id="@+id/content"
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:orientation="vertical"/>

        </LinearLayout>


        <View
            style="@style/DestinationMargin"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="0.1"/>

    </LinearLayout>

    <View
        style="@style/DestinationMargin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>

</LinearLayout><!-- From: file:/Users/schandrashekar/Documents/Workspace/android-here-sdk-release/sdk/res/layout/sdk_screen_template_destination.xml -->